---
import BlankLayout from './BlankLayout.astro';
import { useTranslations } from "@i18n/utils";

interface Props {
	title: string;
}

const { lang } = Astro.params;
const { title } = Astro.props;
const t = useTranslations(lang);
---
<BlankLayout title={title}>
    <slot />
	<footer class="grid">
		<div>
			<span>
				<a
					href="https://www.linkedin.com/in/nicolas-de-gheselle-1437a1167/"
					><i class="fa-brands fa-linkedin"></i></a
				>
				<a href="https://github.com/ndegheselle"
					><i class="fa-brands fa-github"></i></a
				>
				<a
					href="cv"
					title="CV"><i class="fa-regular fa-file"></i></a
				></span
			>
			<p>
				{t('footer.text')} <i class="fa-regular fa-heart"></i>
			</p>
		</div>
	</footer>
</BlankLayout>

<style>
    footer {
        background-color: var(--color-background-more-3);
        height: 10rem;
        margin-top: 2rem !important;
        padding-top: 2rem;
        text-align: center;
        color: var(--color-midground);
    }

    footer a {
        font-size: 1.2rem;
    }
</style>
