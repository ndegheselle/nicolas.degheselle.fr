---
import Layout from "../layouts/Layout.astro";

import Presentation from "../components/pages/Presentation.astro";
import WorkExperience from "../components/pages/WorkExperience.astro";
---

<script>
  document.getElementById("changeTheme").addEventListener("click", () => {
    document.body.dataset.theme =
      document.body.dataset.theme === "light" ? "dark" : "light";
  });
</script>

<Layout title="Welcome to Astro.">
  <main>
    <button id="changeTheme" class="with-icon">
      <i class="gg-dark-mode"></i>
    </button>

    <Presentation />
    <WorkExperience />
    <section>
      <h2>Projects</h2>
    </section>
    <section>
      <h2>LIBRARY OF KNOwLEDGES</h2>
    </section>
  </main>
</Layout>

<style>
  #changeTheme {
    position: fixed;
    top: 1rem;
    right: 1rem;
  }

</style>