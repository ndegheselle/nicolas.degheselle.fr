---
import Library from "./Library.svelte";
import HobbiesAndAll from "./HobbiesAndAll.svelte";
---

<Library client:idle client:only />
<HobbiesAndAll client:idle />

<style is:global>
    svg {
        --color-back-low: #f5f5f5;
        --color-back: #e0e0e0;
        --color-medium: #d0d0d0;
        --color-front-low: #c0c0c0;
        --color-front: #b0b0b0;

        --color-primary-low: #ff8f81;
        --color-primary: #ff6f61;
        transition: 0.3s;
    }

    svg .selectable {
        cursor: grab;
    }

    svg .selectable.is-active{
        --color-front-low: var(--color-primary-low);
        --color-front: var(--color-primary);
    }

    svg .selectable.is-selected {
        --color-front-low: var(--color-primary);
        --color-front: var(--color-primary-low);
    }
</style>
