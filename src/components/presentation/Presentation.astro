---
import Card from "@components/Card.svelte";
import Guidelines from "./Guidlines.svelte";
import { useTranslations } from '@i18n/utils';

const { lang } = Astro.params;
const me = await import(`../../contents/${lang}/me.json`);
const t = useTranslations(lang);
---

<h2 class="giant-title is-overlapping fil-ariane-balise" id="title-who">{t('title.who')}</h2>
<div class="grid with-gutter">
  <div class="col is-6 on-sm-is-12">
    <Card>
      <h2 slot="title">{t('title.me')}</h2>
      <p>
        {me.description}
      </p>
    </Card>
  </div>
</div>

<h2 class="giant-title is-overlapping fil-ariane-balise" id="title-how">{t('title.how')}</h2>
<Guidelines guidelines={me.guidelines}/>
